<%= form_with url: "/teams/#{@team.id}/players", method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %>
  <%= form.label :jersey_number, "Jersey Number" %>
  <%= form.text_field :jersey_number, required: true %>
  <%= form.label :retired%>
  <%= form.check_box :retired %>

<%= form.submit "Create Player" %>
<% end %>